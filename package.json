{
  "name": "unividown",
  "version": "1.0.0",
  "description": "UniviDown - Universal Media Downloader for multiple platforms",
  "main": "electron/main.js",
  "scripts": {
    "start": "electron .",
    "server": "node server.js",
    "dev": "node server.js",
    "build": "electron-builder",
    "build:win": "electron-builder --win",
    "pack": "electron-builder --dir"
  },
  "build": {
    "appId": "com.unividown.app",
    "productName": "UniviDown",
    "asar": false,
    "directories": {
      "output": "dist"
    },
    "files": [
      "electron/**/*",
      "public/**/*",
      "server.js",
      "package.json",
      "node_modules/**/*",
      "!node_modules/*/{CHANGELOG.md,README.md,readme.md,test,tests,*.test.js}",
      "!node_modules/.cache/**/*"
    ],
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "public/assets/logouniversaldown.png"
    },
    "nsis": {
      "oneClick": false,
      "perMachine": false,
      "allowToChangeInstallationDirectory": true,
      "deleteAppDataOnUninstall": true
    }
  },
  "keywords": [
    "universal",
    "media",
    "downloader",
    "youtube",
    "tiktok",
    "yt-dlp",
    "ffmpeg",
    "multi-platform",
    "electron",
    "desktop"
  ],
  "author": "Personal Use",
  "license": "MIT",
  "dependencies": {
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1"
  },
  "engines": {
    "node": ">=14.0.0"
  }
}
